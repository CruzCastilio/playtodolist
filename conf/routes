# Home page
GET         /                        controllers.HomeController.index

# Tasks
GET         /tasklist                controllers.HomeController.taskList
GET         /taskedit/:id            controllers.HomeController.taskEdit(id: Long)
#GET     /tasknew                    controllers.HomeController.taskNew
POST        /tasks/:id/delete        controllers.HomeController.deleteTask(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file            controllers.Assets.versioned(path="/public", file: Asset)
